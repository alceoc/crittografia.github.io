    <script>
        // Chiavi simulate
        const keys = {
            fioccorosa: {
                public: 'FIOCCOROSA_PUBLIC_2024_XY9Z',
                private: 'FIOCCOROSA_PRIVATE_SECRET_AB3C'
            },
            rinoceronte: {
                public: 'RINOCERONTE_PUBLIC_2024_QW8E',
                private: 'RINOCERONTE_PRIVATE_SECRET_RT5Y'
            }
        };
        
        const displayNames = {
            fioccorosa: 'Fiocco Rosa',
            rinoceronte: 'Rino Ceronte'
        };
        
        let currentSigned = null;
        
        // Inizializza chiavi
        document.getElementById('fioccorosa-public').textContent = keys.fioccorosa.public;
        document.getElementById('fioccorosa-private').textContent = keys.fioccorosa.private;
        document.getElementById('rinoceronte-public').textContent = keys.rinoceronte.public;
        document.getElementById('rinoceronte-private').textContent = keys.rinoceronte.private;
        
        // Funzione di cifratura semplificata
        function encrypt(text, key) {
            let result = '';
            for (let i = 0; i < text.length; i++) {
                result += String.fromCharCode(text.charCodeAt(i) ^ key.charCodeAt(i % key.length));
            }
            return btoa(result + '::' + key.substring(0, 8)); // Include parte della chiave per verifica
        }
        
        function decrypt(encrypted, key) {
            try {
                let decoded = atob(encrypted);
                let parts = decoded.split('::');
                let encryptedText = parts[0];
                let keyCheck = parts[1];
                
                let result = '';
                for (let i = 0; i < encryptedText.length; i++) {
                    result += String.fromCharCode(encryptedText.charCodeAt(i) ^ key.charCodeAt(i % key.length));
                }
                return { success: true, message: result, keyMatch: key.substring(0, 8) === keyCheck };
            } catch (e) {
                return { success: false, message: null, keyMatch: false };
            }
        }
        
        function signMessage() {
            const sender = document.getElementById('sender').value;
            const receiver = document.getElementById('receiver').value;
            const message = document.getElementById('message').value;
            
            if (!message.trim()) {
                alert('Inserisci un messaggio!');
                return;
            }
            
            // Cifra con la chiave PRIVATA del mittente
            const signed = encrypt(message, keys[sender].private);
            
            currentSigned = {
                signed: signed,
                sender: sender,
                receiver: receiver,
                originalMessage: message
            };
            
            // Aggiorna UI
            const senderName = displayNames[sender];
            const receiverName = displayNames[receiver];
            
            document.getElementById('step1-sender').textContent = senderName;
            document.getElementById('step2-sender').textContent = senderName;
            document.getElementById('step3-receiver').textContent = receiverName;
            document.getElementById('step4-receiver').textContent = receiverName;
            document.getElementById('step5-receiver').textContent = receiverName;
            document.getElementById('step5-sender').textContent = senderName;
            document.getElementById('step6-receiver').textContent = receiverName;
            document.getElementById('step6-sender').textContent = senderName;
            
            document.getElementById('sender-name').textContent = senderName;
            document.getElementById('sender-name2').textContent = senderName;
            document.getElementById('sender-name3').textContent = senderName;
            
            document.getElementById('process-display').style.display = 'block';
            document.getElementById('encrypted-message').textContent = signed;
            document.getElementById('encrypted-box').classList.add('show');
            document.getElementById('decrypt-section').style.display = 'block';
            document.getElementById('decrypted-box').classList.remove('show');
        }
        
        function decryptMessage() {
            if (!currentSigned) return;
            
            // Decifra con la chiave PUBBLICA del mittente
            const result = decrypt(currentSigned.signed, keys[currentSigned.sender].public);
            
            const senderName = displayNames[currentSigned.sender];
            const receiverName = displayNames[currentSigned.receiver];
            
            if (result.success && result.keyMatch) {
                document.getElementById('decrypted-message').textContent = result.message;
                document.getElementById('verification-result').innerHTML = `
                    <div style="background: #e8f5e9; padding: 15px; border-radius: 8px; margin-top: 15px; border-left: 4px solid #4caf50;">
                        <p style="color: #2e7d32; margin: 0; font-weight: bold; font-size: 1.1em;">
                            ‚úÖ FIRMA VERIFICATA CON SUCCESSO!
                        </p>
                        <p style="color: #2e7d32; margin-top: 10px; line-height: 1.6;">
                            ${receiverName} ha decodificato il messaggio usando la chiave pubblica di ${senderName}. 
                            Questo prova che:
                        </p>
                        <ul style="color: #2e7d32; margin-top: 10px; margin-left: 20px; line-height: 1.8;">
                            <li>Il messaggio √® stato cifrato con la chiave privata di ${senderName}</li>
                            <li>Solo ${senderName} possiede quella chiave privata</li>
                            <li>Quindi il messaggio proviene SICURAMENTE da ${senderName}!</li>
                            <li>${senderName} non pu√≤ negare di averlo scritto (non ripudio)</li>
                        </ul>
                    </div>
                `;
            } else {
                document.getElementById('decrypted-message').textContent = '‚ùå Decifratura fallita';
                document.getElementById('verification-result').innerHTML = `
                    <div style="background: #ffebee; padding: 15px; border-radius: 8px; margin-top: 15px; border-left: 4px solid #f44336;">
                        <p style="color: #c62828; margin: 0; font-weight: bold;">
                            ‚ùå FIRMA NON VALIDA!
                        </p>
                        <p style="color: #c62828; margin-top: 10px;">
                            Il messaggio non pu√≤ essere decodificato correttamente. Potrebbe essere stato alterato o non proviene dal mittente dichiarato.
                        </p>
                    </div>
                `;
            }
            
            document.getElementById('decrypted-box').classList.add('show');
        }
        
        function clearAll() {
            document.getElementById('message').value = '';
            document.getElementById('process-display').style.display = 'none';
            document.getElementById('encrypted-box').classList.remove('show');
            document.getElementById('decrypt-section').style.display = 'none';
            document.getElementById('decrypted-box').classList.remove('show');
            currentSigned = null;
        }
        
        // Aggiorna destinatario quando cambia mittente
        document.getElementById('sender').addEventListener('change', function() {
            const receiver = document.getElementById('receiver');
            receiver.value = this.value === 'fioccorosa' ? 'rinoceronte' : 'fioccorosa';
        });
    </script>
